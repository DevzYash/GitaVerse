<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chapterCard"
    style="@style/Widget.Material3.CardView.Filled"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="#AEC3B0"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="8dp">

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.Material3.CardView.Outlined"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            app:cardBackgroundColor="#EFF6E0"
            app:cardCornerRadius="12dp"
            app:cardUseCompatPadding="true"
            app:strokeColor="#124559"
            app:strokeWidth="2dp">

            <TextView
                android:id="@+id/chapterNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#01161E"
                android:textStyle="bold"
                tools:text="1" />

        </com.google.android.material.card.MaterialCardView>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="5dp">

            <TextView
                android:id="@+id/chapterText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#01161E"
                android:textStyle="bold"
                tools:text="Chapter1. Arjun killed" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <TextView
                android:id="@+id/totalVerses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#01161E"
                tools:text="47 Verses" />


        </LinearLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:contentDescription="NULL"
            android:src="@drawable/baseline_keyboard_arrow_right_24" />


    </LinearLayout>


</com.google.android.material.card.MaterialCardView>